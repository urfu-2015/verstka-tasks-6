mixin generate-state(n)
    - for (var i=0; i<n; i++)
        input(id='state-'+ i, type='radio', name='state', checked=i==0)

mixin generate-slider(n, reverse)
    .sliders-group(class=reverse ? 'reverse' : '')
        - for (var i=n; i>0; i--)
            label(for='state-'+ (i - 1 - (reverse ? -1 : 1)), class='slider slider-' + i)

mixin generate-image-group(n)
    .image-group(class='image-group-' + n)
        - for (var i=0; i<4; i++)
            - var min = 1000, max = 1500;
            - var w = Math.floor(Math.random() * (min - max) + max);
            - var h = Math.floor(Math.random() * (min - max) + max);
            - var id = i + '-' + n
            - var src = 'http://pipsum.com/'+ w + 'x' + h + '.jpg';
            .fake-image
                img(alt="image preview", src!=src)
                .image-info.lightbox(id="image-"+id)
                    .close
                        a(href="#") x
                    a.image-info-image(href="#image-"+id)
                        img(alt="image preview", src!=src)
                    .description!= '\ndsdfs f sdf sdf sdf sdf sdf sdf sdf sdgf ogmsdogn odfsgnsdfiopnasdip asgdfiopg nauiop fd\n'


